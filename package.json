{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "A basic Electron.js application",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "nodemon --watch main.js --exec \"electron .\"",
    "prod": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.bpe-barcode-generator.mscorpres",
    "productName": "BPe-Barcode Generator",
    "copyright": "Copyright Â© 2024",
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/build/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.9.8",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "html2canvas": "^1.4.1",
    "html2pdf": "^0.0.11",
    "html2pdf.js": "^0.10.2",
    "jsbarcode": "^3.11.6",
    "jspdf": "^2.5.2"
  }
}
